{
  // must start project first
  "configurations": [
    // may need to trigger twice
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "https://localhost:1234",
      "webRoot": "${workspaceFolder}",
      // "sourceMaps": false,
      "runtimeExecutable": "C:/Program Files/Google/Chrome/Application/chrome.exe",
      //   https://developer.chrome.com/blog/remote-debugging-port?hl=zh-cn
      // â¬‡ invalid after Chrome 136
      //   "userDataDir": false,
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        // "--user-data-dir=${workspaceFolder}/.vscode/ChromeDev",
        "--user-data-dir=E:/ChromeDevUserData",
        "--auto-open-devtools-for-tabs"
        // "--incognito"
      ]
    },
    {
      "name": "Attach to Running Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
